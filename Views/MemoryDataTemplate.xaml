<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:CppMemoryVisualizer.Views">

    <local:UIntToHexadecimalConverter x:Key="UIntToHexadecimalConverter" />
    <local:BytesToValueConverter x:Key="BytesToValueConverter" />
    <local:BytesToPointerConverter x:Key="BytesToPointerConverter" />

    <DataTemplate x:Key="ValueOnly">
        <Grid Margin="8, 0, 0, 0">
            <TextBlock
                Text="{Binding ., Converter={StaticResource BytesToValueConverter}}"
                Foreground="Blue" />
        </Grid>
    </DataTemplate>

    <DataTemplate
        x:Key="PointerOnly">
        <Grid
            Margin="8, 0, 0, 0">
            <TextBlock
                Text="{Binding ., Converter={StaticResource BytesToPointerConverter}}"
                Foreground="Brown" />
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="Unobservable">
        <Grid
            Margin="8, 0, 0, 0">
            <TextBlock
                Text="Cannot observe"
                Foreground="Red" />
        </Grid>
        
    </DataTemplate>
</ResourceDictionary>