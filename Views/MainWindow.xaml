<Window
    x:Class="CppMemoryVisualizer.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:CppMemoryVisualizer"
    xmlns:vm="clr-namespace:CppMemoryVisualizer.ViewModels"
    xmlns:v="clr-namespace:CppMemoryVisualizer.Views"
    xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
    mc:Ignorable="d"
    Height="800"
    Width="800"
    WindowStartupLocation="CenterScreen"
    >

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Window.InputBindings>
        <KeyBinding Key="F5" Command="{Binding Path=GoCommand}" />
        <KeyBinding Key="F10" Command="{Binding Path=StepOverCommand}" />
        <KeyBinding Key="F11" Command="{Binding Path=StepInCommand}" />
    </Window.InputBindings>

    <Window.Resources>
        <v:WindowTitleConverter x:Key="WindowTitleConverter" />
    </Window.Resources>

    <Window.Title>
        <Binding Path="SourcePathOrNull" Converter="{StaticResource WindowTitleConverter}" Mode="OneWay"/>
    </Window.Title>

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="O_pen" Command="{Binding Path=LoadSourceFileCommand}" />
            <MenuItem Header="D_ebug" Command="{Binding Path=DebugCommand}" />
            <MenuItem Header="Go (F5)" Command="{Binding Path=GoCommand}" InputGestureText="F5" >
                <MenuItem.InputBindings>
                    <KeyBinding Key="F5" Modifiers="Control" Command="{Binding Path=GoCommand}"/>
                </MenuItem.InputBindings>
            </MenuItem>
            <MenuItem Header="Step-Over (F10)" Command="{Binding Path=StepOverCommand}">
                <MenuItem.InputBindings>
                    <KeyBinding Key="F10" Modifiers="Control" Command="{Binding Path=StepOverCommand}"/>
                </MenuItem.InputBindings>
            </MenuItem>
            <MenuItem Header="Step-In (F11)" Command="{Binding Path=StepInCommand}">
                <MenuItem.InputBindings>
                    <KeyBinding Key="F11" Modifiers="Control" Command="{Binding Path=StepInCommand}"/>
                </MenuItem.InputBindings>
            </MenuItem>
            <MenuItem Command="{Binding Path=BreakPointCommand}" CommandParameter="{Binding Text, ElementName=xLineTextBox}">
                <MenuItem.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="xLineTextBox" Width="24"/>
                        <TextBlock Grid.Column="1" Text="BreakPoint" />
                    </Grid>
                </MenuItem.Header>
            </MenuItem>

        </Menu>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="24"/>
            </Grid.RowDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <v:BindableAvalonEditor
                    x:Name="xTextEditor"
                    SyntaxHighlighting="C#"
                    ShowLineNumbers="True"
                    IsReadOnly="True"
                    FontSize="14"
                    FontFamily="Consolas"
                    Text="{Binding SourceCode}"
                    />
                <GridSplitter
                    Grid.Column="1"
                    Width="5"
                    Background="Gray"
                    ShowsPreview="true"
                    HorizontalAlignment="Stretch"
                    />
                <avalonedit:TextEditor
                    Name="xEditor"
                    Grid.Column="2"
                    ShowLineNumbers="True"
                    />
            </Grid>

            <TextBox
                x:Name="xTextBoxLog"
                Grid.Row="1"
                TextWrapping="Wrap"
                AcceptsReturn="True"
                VerticalScrollBarVisibility="Visible"
                Text="{Binding Log}"
                IsReadOnly="True"
                TextChanged="xTextBoxLog_TextChanged"
                />

            <Grid Grid.Row="2">
                <TextBox
                    x:Name="xTextBoxInput"
                    KeyDown="xTextBoxInput_KeyDown"
                    />
            </Grid>
        </Grid>
    </DockPanel>

</Window>
